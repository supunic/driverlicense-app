<%= form_with(model: contact, local: true) do |form| %>

  <div class="contact_name">
    <%= form.label :name %>
    <p class="in_field"><%= form.text_field :name, id: :contact_name,:class=>"form_css col-xs-12" %></p>
  </div>

  <div class="contact_email">
    <%= form.label :email %>
    <p class="in_field"><%= form.text_field :email, id: :contact_email,:class=>"form_css col-xs-12" %></p>
  </div>

  <div class="contact_content">
    <%= form.label :content %>
    <p class="in_field"><%= form.text_area :content, id: :contact_content,:class=>"form_textarea_css col-xs-12" %></p>
  </div>

  <div class="contact_actions">
    <%= form.submit "送信",:class=>"form_login_btn col-xs-12" %>
  </div>
<% end %>
